<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_flags"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
>

    <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/countryIV"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"/>

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:background="@drawable/gradient_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/nameCountryTV"
                        tools:text="Country name"
                        style="@style/attributes_text_style"/>

                <TextView
                        android:id="@+id/capitalTV"
                        tools:text="Country Capital"
                        style="@style/attributes_text_style"/>
                <TextView
                        android:id="@+id/populationTV"
                        tools:text="Country population "
                        style="@style/attributes_text_style"/>
                <TextView
                        android:id="@+id/regionTV"
                        tools:text="Country region"
                        style="@style/attributes_text_style"/>
                <TextView
                        android:id="@+id/calling_codeTV"
                        tools:text="Country Calling code"
                        style="@style/attributes_text_style"/>

                <TextView
                        android:id="@+id/currencyTV"
                        tools:text="Country Currency"
                        style="@style/attributes_text_style"/>
                <TextView
                        android:id="@+id/languageTV"
                        tools:text="Language "
                        style="@style/attributes_text_style"/>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
    <ImageView
            android:id="@+id/openMapsBTN"
            android:background="@drawable/worldwide"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>